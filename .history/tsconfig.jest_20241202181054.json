// tsconfig.jest.json
// tsconfig.jest.json
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"module": "commonjs",
		"target": "es6",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"types": [
			"jest",
			"node"
		]
	}
}
